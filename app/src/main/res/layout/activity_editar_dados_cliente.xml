<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cliente.GUI.EditarDadosClienteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etNomeClienteMeusDados"

            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:drawableLeft="@drawable/ic_nome"

            android:drawablePadding="15sp"
            android:drawableTint="@color/RoxoFoodGuru"
            android:padding="15sp"

            android:singleLine="true"
            android:hint="Nome"
            android:textColor="@color/Cinza"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etEmailClienteMeusDados"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:drawableLeft="@drawable/ic_email"

            android:drawablePadding="15sp"
            android:drawableTint="@color/RoxoFoodGuru"
            android:padding="15sp"

            android:singleLine="true"
            android:textColor="@color/Cinza"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etSenhaClienteMeusDados"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="15sp"
            android:drawableTint="@color/RoxoFoodGuru"
            android:padding="15sp"
            android:hint="Senha"
            android:singleLine="true"
            android:textColor="@color/Cinza"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnConfirmarEdicao"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/borda_redonda_bt_roxo"
            android:layout_margin="15dp"
            android:text="Confirmar edição"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/Branco" />

    </LinearLayout>



</RelativeLayout>