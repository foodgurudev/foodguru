<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cliente.GUI.MeusDadosClienteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/iv_cliente"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/RoxoFoodGuru"
                android:scaleType="centerCrop"
                />
            <Button
                android:id="@+id/editar_foto"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_foto"
                android:backgroundTint="@color/Branco"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvNomeClienteMeusDados"

                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:singleLine="true"

                android:text="Nome"
                android:textSize="18sp"

                android:drawableLeft="@drawable/ic_nome"
                android:drawableTint="@color/RoxoFoodGuru"

                android:drawablePadding="15sp"
                android:padding="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/RoxoFoodGuru"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

            <TextView
                android:id="@+id/tvEmailClienteMeusDados"

                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:singleLine="true"

                android:text="Email"
                android:textSize="18sp"
                android:textColor="@color/Cinza"

                android:drawableLeft="@drawable/ic_email"
                android:drawableTint="@color/RoxoFoodGuru"

                android:drawablePadding="15sp"
                android:padding="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/RoxoFoodGuru"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabEditarCliente"
            android:layout_width="101dp"
            android:layout_height="113dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_editar"
            android:tint="@color/Branco"
            android:clickable="true"/>
    </RelativeLayout>


</FrameLayout>